<script>
// simple gallery modal
document.querySelectorAll('#gallery img, .grid img').forEach(img=>{
img.style.cursor='pointer'
img.addEventListener('click',e=>{
const src = e.target.dataset.full || e.target.src;
document.getElementById('modal-img').src = src;
document.getElementById('modal').classList.add('open');
})
})
document.getElementById('close').addEventListener('click',()=>document.getElementById('modal').classList.remove('open'))
document.getElementById('modal').addEventListener('click',e=>{if(e.target.id==='modal')document.getElementById('modal').classList.remove('open')})
</script>
